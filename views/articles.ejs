</head>
<body>
    <div id="dVnav-container"> 
        <center><a href="/"><img class="dVaboutLogo" src="https://cdn2.stylecraze.com/wp-content/uploads/static-content/logos/sc-logo.png.webp" alt="Style Craze"></a></center>
</div>

    <center><h1 class="DproductH1">Shop</h1></center>
    <div id="DslctCategory">
        <select name="" id="Dcateg" >
        <option value="Category">Category</option>
        <option value="Skin Care">Skin</option>
        <option value="Fashoin 2">Fashoin 2</option>
        <option value="Hair Care">Hair</option>
        <option value="Fashion">Fashion</option>
        <option value="Home and Appliances">Home and Appliances</option>
        <option value="Women Fitness">Womens Fitness</option>
        <option value="Make Up">Make Up</option>
        <option value="Health">Health</option>
        <option value="Hair Care">Hair Care Ideas</option>
        </select>
    </div>
    <ol id="sol">
        <li class="sli">
            <a href="/">Home</a>
        </li> Â»
        <li class="sli">
          <a href="/articles">Articles</a>
        </li>
    </ol>
    <div id="DproductCont">
        <% articles.forEach(el => { %>
            <div> 
             <img src="<%- el.prodUrl %>" alt="Article">
 
             <h2 class="dVproduct_categ"><%- el.category %></h2>
             
             <a class="dVproduct_title"><%- el.title %></a>
     
             <h3 class="dVproduct_desc"><%- el.desc %></h3>
             
             <a class="dVproduct_readMore" href="/products">GO TO SHOP</a>
           </div>
        <% }); %>
    </div>
    <center><span id="dVnowMoredata"></span></center>
    <center><button id="dVloadMore">Load More</button></center>
    <div id = "DK_main"></div>
    <div id = "DK_last"></div>
</body>
</html>
<!-- <script type="module" src="../scripts/products.js"></script> -->
<script>

    // To add filter
    document.getElementById("Dcateg").addEventListener("change", dofilter)
    function dofilter(e)
    {
        window.location.href = `/articles?category=${e.target.value}` 
    }

    // for Load More
    let click = 1
    document.getElementById("dVloadMore").addEventListener("click", moreData); 
    function moreData()
    {
        click++;
        console.log(click, "clicked");
        window.location.href = `/articles?page=${click}`
    }
</script>
<script type="module">
    let DK_main =  document.getElementById("DK_main")
    import footer from "../scripts/footer.js"
    DK_main.innerHTML = footer()
    let DK_last  =document.getElementById("DK_last")
    import copy from "../scripts/copy.js"
    DK_last.innerHTML = copy()
</script>